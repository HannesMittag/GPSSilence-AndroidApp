<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Splash_Root"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Splash_Logo"
            android:src="@drawable/ic_logob"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Splash_Permission_Location_Root"
        android:background="@drawable/rect_round_white"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Splash_permission_Location_GlMid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent=".8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_Permission_Location_Text"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="18sp"
            android:text="@string/permission_gps"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Splash_permission_Location_GlMid"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_permission_Location_BtnAccept"
            android:background="@drawable/rect_round_mint"
            android:elevation="10dp"
            android:text="@string/permission_ok"
            android:textAllCaps="false"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/Splash_permission_Location_GlMid" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_permission_Location_BtnClose"
            android:background="@drawable/rect_round_white"
            android:elevation="10dp"
            android:text="@string/permission_close"
            android:textAllCaps="false"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/Splash_permission_Location_BtnAccept"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Splash_Permission_Sound_Root"
        android:background="@drawable/rect_round_white"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Splash_permission_Sound_GlMid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent=".8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_Permission_Sound_Text"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="18sp"
            android:text="@string/permission_sound"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Splash_permission_Sound_GlMid"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_permission_Sound_BtnAccept"
            android:background="@drawable/rect_round_mint"
            android:elevation="10dp"
            android:text="@string/permission_ok"
            android:textAllCaps="false"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/Splash_permission_Sound_GlMid" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_permission_Sound_BtnClose"
            android:background="@drawable/rect_round_white"
            android:elevation="10dp"
            android:text="@string/permission_close"
            android:textAllCaps="false"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/Splash_permission_Sound_BtnAccept"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Splash_permission_Location_denied_root"
        android:background="@drawable/rect_round_white"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Splash_permission_Location_denied_GlMid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent=".8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_Permission_Location_denied_Text"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="18sp"
            android:text="@string/permission_gps_denied"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Splash_permission_Location_denied_GlMid"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Splash_permission_Location_denied_BtnAccept"
            android:background="@drawable/rect_round_mint"
            android:elevation="10dp"
            android:text="@string/permission_ok"
            android:textAllCaps="false"
            android:textColor="@color/colorText_DarkGrey"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/Splash_permission_Location_denied_GlMid"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>